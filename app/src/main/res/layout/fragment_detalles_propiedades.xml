<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".DetallesPropiedades">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/etDireccionDetalles"
        android:layout_width="264dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:enabled="true"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Direccion" />

    <EditText
        android:id="@+id/etPrecioDetalles"
        android:layout_width="264dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="172dp"
        android:ems="10"
        android:enabled="true"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPrecioDetalles"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Tipo" />

    <EditText
        android:id="@+id/etTipoInmuebleDetalles"
        android:layout_width="264dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="295dp"
        android:ems="10"
        android:enabled="true"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTipoInmuebleDetalles"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="294dp"
        android:text="Ambientes" />

    <EditText
        android:id="@+id/etCantAmbientesDetalles"
        android:layout_width="264dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="420dp"
        android:ems="10"
        android:inputType="text" />

    <CheckBox
        android:id="@+id/cbEstadoDetalles"
        android:layout_width="113dp"
        android:layout_height="42dp"
        android:layout_below="@+id/etCantAmbientesDetalles"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4FC2F7"
        android:buttonTint="#45A5EF"
        android:fontFamily="@font/roboto_medium"
        android:text="Disponible"
        android:textColorHighlight="#2196F3"
        android:textColorLink="#2196F3" />

    <Button
        android:id="@+id/btnGuardarDetallesProp"
        android:layout_width="268dp"
        android:layout_height="60dp"
        android:layout_below="@+id/cbEstadoDetalles"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="78dp"
        android:background="@drawable/botones"
        android:fontFamily="@font/roboto_medium"
        android:text="Guardar Cambios"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDireccionDetalles"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Precio" />

</RelativeLayout>